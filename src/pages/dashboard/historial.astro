import { logger } from "../../lib/logger";
import DashboardLayout from "../../layouts/DashboardLayout.astro";
import { createClient } from '@insforge/sdk';

const INSFORGE_URL = import.meta.env.PUBLIC_INSFORGE_URL;
const INSFORGE_ANON_KEY = import.meta.env.PUBLIC_INSFORGE_ANON_KEY;

// Obtener token de la cookie
const accessToken = Astro.cookies.get("if-access-token")?.value;

if (!accessToken) {
    return Astro.redirect("/login");
}

// Decodificar JWT para obtener datos b√°sicos del usuario
let userId = "";

try {
    const payloadBase64 = accessToken.split('.')[1];
    const payload = JSON.parse(Buffer.from(payloadBase64, 'base64').toString());
    userId = payload.sub || payload.id || "";
} catch (e) {
    logger.error("Error decodificando token:", e);
    return Astro.redirect("/login");
}

if (!userId) {
    return Astro.redirect("/login");
}

// Crear cliente de InsForge
const insforge = createClient({
    baseUrl: INSFORGE_URL,
    anonKey: INSFORGE_ANON_KEY,
    headers: {
        'Authorization': `Bearer ${accessToken}`
    }
});

// Funci√≥n para obtener historial con reintentos
async function obtenerHistorial(userId: string, maxIntentos = 3): Promise<any[]> {
    for (let intento = 1; intento <= maxIntentos; intento++) {
        try {
            const { data, error } = await insforge.database
                .from("historial_entrenamientos")
                .select("*")
                .eq("usuario_id", userId)
                .order("fecha", { ascending: false })
                .limit(50);
            
            if (error) {
                logger.error(`Error en intento ${intento}:`, error.message);
                if (intento < maxIntentos) {
                    await new Promise(resolve => setTimeout(resolve, 500));
                    continue;
                }
                return [];
            }
            return data || [];
        } catch (e: any) {
            logger.error(`Excepci√≥n en intento ${intento}:`, e.message);
            if (intento < maxIntentos) {
                await new Promise(resolve => setTimeout(resolve, 500));
                continue;
            }
            return [];
        }
    }
    return [];
}

// Obtener historial
const historial = await obtenerHistorial(userId);

// Calcular estad√≠sticas
const totalEntrenamientos = historial.length;
const totalMinutos = historial.reduce((acc, h) => acc + (h.duracion_minutos || 0), 0);
const totalCalorias = historial.reduce((acc, h) => acc + (h.calorias_quemadas || 0), 0);

// Obtener mes actual
const today = new Date();
const currentMonth = today.toLocaleString("es-ES", { month: "long", year: "numeric" });
const currentMonthCapitalized = currentMonth.charAt(0).toUpperCase() + currentMonth.slice(1);

// Generar d√≠as del calendario
const daysInMonth = new Date(today.getFullYear(), today.getMonth() + 1, 0).getDate();
const startDay = new Date(today.getFullYear(), today.getMonth(), 1).getDay();
const calendarDays = Array.from({ length: 42 }, (_, i) => {
    const dayNum = i - startDay + 1;
    if (dayNum < 1 || dayNum > daysInMonth) return null;
    return dayNum;
});

// D√≠as activos desde el historial
const activeDays = historial
    ?.filter(h => {
        const fecha = new Date(h.fecha);
        return fecha.getMonth() === today.getMonth() && fecha.getFullYear() === today.getFullYear();
    })
    .map(h => new Date(h.fecha).getDate()) || [];
