---
import DashboardLayout from "../../layouts/DashboardLayout.astro";
import { insforge } from "../../lib/insforge";
import { logger } from "../../lib/logger";

// Obtener rutinas reales de la base de datos
let rutinas: any[] = [];
try {
    const { data, error } = await insforge.database
        .from("rutinas")
        .select("*")
        .order("created_at", { ascending: false });
    
    if (!error) {
        rutinas = data || [];
    }
} catch (e) {
    logger.error("Error cargando rutinas:", e);
}

// Si no hay rutinas, obtener ejercicios como alternativa
let ejercicios: any[] = [];
if (rutinas.length === 0) {
    try {
        const { data, error } = await insforge.database
            .from("ejercicios")
            .select("*")
            .order("created_at", { ascending: false });
        
        if (!error) {
            ejercicios = data || [];
        }
    } catch (e) {
        logger.error("Error cargando ejercicios:", e);
    }
}

// Usar ejercicios si no hay rutinas
const items = rutinas.length > 0 ? rutinas : ejercicios;
const tipo = rutinas.length > 0 ? "rutinas" : "ejercicios";

