    )}
</DashboardLayout>

<script>
    // Filtrado de items
    const searchInput = document.getElementById('buscar-rutina') as HTMLInputElement;
    const itemCards = document.querySelectorAll('.item-card');
    const filterButtons = document.querySelectorAll('[data-filter]');
    let currentFilter = 'todos';

    // BÃºsqueda
    searchInput?.addEventListener('input', (e) => {
        const query = (e.target as HTMLInputElement).value.toLowerCase();
        filtrarItems(query, currentFilter);
    });

    // Filtros
    filterButtons.forEach(btn => {
        btn.addEventListener('click', () => {
            const filter = btn.getAttribute('data-filter') || 'todos';
            currentFilter = filter;
            
            // Actualizar estilos de botones
            filterButtons.forEach(b => {
                b.classList.remove('bg-orange-500', 'text-white');
                b.classList.add('bg-[#141414]', 'text-gray-400');
            });
            btn.classList.remove('bg-[#141414]', 'text-gray-400');
            btn.classList.add('bg-orange-500', 'text-white');
            
            filtrarItems(searchInput?.value.toLowerCase() || '', filter);
        });
    });

    function filtrarItems(query: string, categoria: string) {
        itemCards.forEach(card => {
            const nombre = card.getAttribute('data-nombre') || '';
            const cat = card.getAttribute('data-categoria') || '';
            
            const matchNombre = nombre.includes(query);
            const matchCategoria = categoria === 'todos' || cat === categoria;
            
            if (matchNombre && matchCategoria) {
                (card as HTMLElement).style.display = 'block';
            } else {
                (card as HTMLElement).style.display = 'none';
            }
        });
    }
</script>

