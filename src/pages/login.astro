---
import BaseLayout from "../layouts/BaseLayout.astro";
import LoginForm from "../components/auth/LoginForm";
---

<BaseLayout title="Iniciar Sesión" showNav={false}>
  <div class="min-h-screen flex items-center justify-center p-4 sm:p-6 lg:p-8 relative overflow-hidden">
    <!-- Fondos animados -->
    <div class="absolute inset-0 overflow-hidden pointer-events-none">
      <div class="absolute top-[-20%] left-[-10%] w-[60%] h-[60%] rounded-full bg-orange-500/10 blur-[120px] animate-pulse"></div>
      <div class="absolute bottom-[-20%] right-[-10%] w-[60%] h-[60%] rounded-full bg-orange-400/10 blur-[120px] animate-pulse" style="animation-delay: 2s;"></div>
      <div class="absolute top-[40%] right-[20%] w-[40%] h-[40%] rounded-full bg-orange-300/5 blur-[100px] animate-pulse" style="animation-delay: 4s;"></div>
    </div>

    <div class="w-full max-w-[420px] relative z-10">
      <!-- Back to home link -->
      <a href="/" class="inline-flex items-center gap-2 text-gray-400 hover:text-white transition-colors mb-6 sm:mb-8 group text-sm sm:text-base">
        <svg class="w-4 h-4 sm:w-5 sm:h-5 transition-transform group-hover:-translate-x-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18"></path>
        </svg>
        Volver al inicio
      </a>

      <!-- Logo -->
      <div class="text-center mb-6 sm:mb-8">
        <a href="/" class="inline-block text-3xl sm:text-4xl font-bold tracking-tighter mb-2">
          Dave<span class="text-orange-500">Fit</span>
        </a>
        <h1 class="text-xl sm:text-2xl font-bold text-white">Bienvenido de nuevo</h1>
        <p class="text-gray-400 mt-2 text-sm sm:text-base">Continúa tu transformación</p>
      </div>

      <!-- Login Card -->
      <div class="glass-panel p-6 sm:p-8 rounded-2xl sm:rounded-3xl shadow-2xl border border-white/10">
        <LoginForm client:load />
      </div>

      <!-- Footer -->
      <p class="text-center mt-6 sm:mt-8 text-sm text-gray-400">
        ¿No tienes una cuenta? 
        <a href="/register" class="text-orange-500 hover:text-orange-400 font-medium transition-colors hover:underline">
          Regístrate gratis
        </a>
      </p>
      
      <!-- Trust badges -->
      <div class="mt-6 sm:mt-8 flex items-center justify-center gap-4 sm:gap-6 text-xs text-gray-500">
        <span class="flex items-center gap-1">
          <svg class="w-3 h-3 sm:w-4 sm:h-4 text-orange-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 15v2m-6 4h12a2 2 0 002-2v-6a2 2 0 00-2-2H6a2 2 0 00-2 2v6a2 2 0 002 2zm10-10V7a4 4 0 00-8 0v4h8z"></path>
          </svg>
          Seguro
        </span>
        <span class="flex items-center gap-1">
          <svg class="w-3 h-3 sm:w-4 sm:h-4 text-orange-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"></path>
          </svg>
          Gratis
        </span>
      </div>
    </div>
  </div>
</BaseLayout>
