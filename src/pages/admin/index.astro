---
import AdminLayout from "../../layouts/AdminLayout.astro";
import { insforge } from "../../lib/insforge";
import { logger } from "../../lib/logger";

// Obtener estad√≠sticas reales de InsForge
let totalEjercicios = 0;
let totalRutinas = 0;

try {
    const { data: ejercicios, error: ejError } = await insforge.database
        .from("ejercicios")
        .select("id", { count: "exact" });

    if (!ejError && ejercicios) {
        totalEjercicios = ejercicios.length;
    }
} catch (e) {
    logger.error("Error contando ejercicios:", e);
}

try {
    const { data: rutinas, error: rError } = await insforge.database
        .from("rutinas")
        .select("id", { count: "exact" });

    if (!rError && rutinas) {
        totalRutinas = rutinas.length;
    }
} catch (e) {
    logger.error("Error contando rutinas:", e);
}

const stats = [
    { label: "Usuarios Totales", value: "--", icon: "üë•" },
    {
        label: "Ejercicios Activos",
        value: totalEjercicios.toString(),
        icon: "üèãÔ∏è",
    },
    { label: "Rutinas Creadas", value: totalRutinas.toString(), icon: "üìù" },
    { label: "Entrenamientos Completados", value: "--", icon: "üî•" },
];
---

<AdminLayout title="Resumen General">
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-6 mb-8">
        {
            stats.map((stat) => (
                <div class="p-6 rounded-2xl bg-[#141414] border border-white/5 hover:border-orange-500/30 transition-colors">
                    <div class="flex justify-between items-start mb-4">
                        <span class="text-2xl">{stat.icon}</span>
                        <span class="text-xs font-bold text-gray-500 uppercase tracking-wider">
                            Estad√≠stica
                        </span>
                    </div>
                    <div class="text-3xl font-bold text-white mb-1">
                        {stat.value}
                    </div>
                    <div class="text-gray-400 text-sm">{stat.label}</div>
                </div>
            ))
        }
    </div>

    <div class="grid grid-cols-1 lg:grid-cols-2 gap-8">
        <div class="p-6 rounded-2xl bg-[#141414] border border-white/5">
            <h2 class="text-xl font-bold text-white mb-4">
                Actividad Reciente
            </h2>
            <div class="space-y-4">
                {
                    [1, 2, 3, 4, 5].map((i) => (
                        <div class="flex items-center gap-4 p-3 hover:bg-white/5 rounded-lg transition-colors border-b border-white/5 last:border-0">
                            <div class="w-10 h-10 rounded-full bg-white/10 flex items-center justify-center">
                                üë§
                            </div>
                            <div>
                                <div class="text-white text-sm font-medium">
                                    Nuevo usuario registrado
                                </div>
                                <div class="text-gray-500 text-xs">
                                    Hace {i * 10} minutos
                                </div>
                            </div>
                        </div>
                    ))
                }
            </div>
        </div>
    </div>
</AdminLayout>
